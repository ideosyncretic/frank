<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">

      <form class="searchform center has-feedback" action="<%= posts_path %>" method="get" >
        <%= text_field_tag :search, params[:search], class: "searchfield form-control", placeholder: "Search Posts" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-default btn-search' %>
        </span>
      </form>

    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.vibe.name %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
