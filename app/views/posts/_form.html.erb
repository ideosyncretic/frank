<div class="container col-md-6">
  <h1>New Post</h1>
  <%= form_for post, url: {action: "create"} do |f| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset class="form-group">
      <%= f.label :vibe %>
      <%= f.collection_select(:vibe_id, @vibes, :id, :name, required: true) %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.text_area :body, class:"form-control", maxlength: @maximum_length, id: 'post_body' %>
      <span id="counter" data-maximum-length="<%= @maximum_length %>"><%= @maximum_length %></span> characters remaining
    </fieldset>

    <fieldset class="actions">
      <% if current_page?(new_user_post_path) %>
      <%= f.submit "Create Post", class:"btn btn-default btn-confirm" %>
      <% else %>
      <%= f.submit "Update Post", class:"btn btn-default btn-confirm" %>
      <% end %>
    </fieldset>
  <% end %>

  <a href="<%= home_path %>" class="btn btn-default btn-back">Back
  </a>

<!-- Character countdown -->
  <script>
    $(document).ready(function() {
      var post_body = $("#post_body");
      var counter     = $("#counter");
      var max_length  = counter.data("maximum-length");

      post_body.keyup(updateCount);
      post_body.keydown(updateCount);

      function updateCount() {
        var current_length = $(this).val().length;
        $('#counter').text( max_length - current_length)
      }

    });
</script>

</div>
